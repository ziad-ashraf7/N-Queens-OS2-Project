<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.os2.NQueenController"
            stylesheets="@application.css" prefWidth="1200" prefHeight="800">

    <!-- Top Section: Title and Controls -->
    <top>
        <VBox spacing="15" style="-fx-background-color: #1976D2; -fx-padding: 20;">
            <Label text="N-Queens Problem Solver" textFill="white">
                <font>
                    <Font name="System Bold" size="24"/>
                </font>
            </Label>

            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Board Size (N):" textFill="white">
                    <font>
                        <Font size="14"/>
                    </font>
                </Label>
                <TextField fx:id="boardSizeField" promptText="4-12" prefWidth="80"
                          style="-fx-font-size: 14;"/>
                <Button fx:id="startButton" text="Start Solving" onAction="#onStartClick"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 8 20;"/>
                <Button fx:id="stopButton" text="Stop" onAction="#onStopClick"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold; -fx-padding: 8 20;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="solutionsCountLabel" text="Solutions found: 0" textFill="white">
                    <font>
                        <Font name="System Bold" size="14"/>
                    </font>
                </Label>
            </HBox>

            <Label fx:id="statusLabel" text="Ready to start" textFill="white">
                <font>
                    <Font size="13"/>
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Center: Thread Visualization -->
    <center>
        <VBox spacing="10" style="-fx-padding: 10;">
            <Label text="Thread Progress Visualization:" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

            <ScrollPane fx:id="threadsScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS"
                       style="-fx-background-color: white;">
                <FlowPane fx:id="threadsContainer" hgap="15" vgap="15"
                         style="-fx-padding: 10; -fx-background-color: white;"/>
            </ScrollPane>
        </VBox>
    </center>

    <!-- Bottom: Solutions Log -->
    <bottom>
        <VBox spacing="5" style="-fx-padding: 10; -fx-background-color: #f5f5f5;">
            <Label text="Solutions Log:" style="-fx-font-size: 14; -fx-font-weight: bold;"/>
            <TextArea fx:id="solutionsArea" editable="false" wrapText="true"
                     prefHeight="150" style="-fx-font-family: monospace; -fx-font-size: 11;"/>
        </VBox>
    </bottom>

</BorderPane>
